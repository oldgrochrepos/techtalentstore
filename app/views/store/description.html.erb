<div>

  <p>
    <%= @product.name %>
  </p>

  <p>
    <strong>Unit Price:</strong>
    <%= number_to_currency(@product.unit_price, :unit => "$") %>
  </p>

  <p>
    <strong>Description:</strong>
    <%= @product.description %>
  </p>

  <p>
    <strong>Quantity:</strong>
    <%= @product.quantity %>
  </p>

  <p>
    <strong>Brand:</strong>
    <%= @product.brand %>
  </p>

  <p>
    <strong>Model Number:</strong>
    <%= @product.model_num %>
  </p>

  <%= link_to 'Back to Storefront', root_path %>
</div>